pipeline{
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                url: 'https://github.com/Siddha200340/my-real-1-app.git'
            }
        }
        stage('Build') {
            steps {
                bat 'docker build -t my-real-1-image .'
            }
        }
        stage('Run') {
            steps {
                bat 'docker rm -f my-real-1-container || exit 0'
                bat 'docker run -d -p 5000:5000 --name my-real-1-container my-real-1-image'
            }
        }
    }
}